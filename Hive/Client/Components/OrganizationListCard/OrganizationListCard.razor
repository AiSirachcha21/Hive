<style>
    .org-item-card {
        border-radius: 12px;
        transition: all ease-in-out 0.3s;
        cursor: default;
    }

        .org-item-card .heading-font {
            font-weight: 800;
            font-size: 22px;
            font-family: "Nunito", sans-serif;
        }

        .org-item-card .stat-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            margin: .5rem 1rem .5rem 0;
        }

        .org-item-card .stat {
            display: flex;
            align-items: center;
        }

</style>

<MudCard Class="org-item-card">
    <MudCardHeader Class="d-flex align-items">
        <CardHeaderAvatar>
            <MudAvatar>@Organization.Name.First()</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.caption">Company</MudText>
            <MudText Typo="Typo.h3" Class="heading-font">@Organization.Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Filled.Settings" Link=@(Routes.OrganizationSettingsOverview(Organization.Id)) />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="d-flex flex-wrap">
        <div class="stat-container">
            <MudText Typo="Typo.h2">
                <div class="stat">
                    <MudIcon Icon="@Icons.Filled.Book" Class="mr-2" />
                    @Organization.ProjectCount
                </div>
            </MudText>
            <MudText>Projects</MudText>
        </div>
        <div class="stat-container">
            <MudText Typo="Typo.h2">
                <div class="stat">
                    <MudIcon Icon="@Icons.Filled.People" Class="mr-2" />
                    @Organization.Employees.Count
                </div>
            </MudText>
            <MudText>Employees</MudText>
        </div>
    </MudCardContent>
    <MudCardActions Class="d-flex justify-end">
        <MudButton Variant="Variant.Text"
                   EndIcon="@Icons.Outlined.ChevronRight"
                   Link="@Routes.OrganizationPage(Organization.Id)">
            View Company
        </MudButton>
    </MudCardActions>
</MudCard>

